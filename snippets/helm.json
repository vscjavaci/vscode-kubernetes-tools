{
  "Pod": {
    "prefix": "Pod",
    "body":
    "apiVersion: v1\nkind: Pod\nmetadata:\n  name: ${name: Pod Name}\nspec:\n  containers:\n  - name: ${containerName: name-of-the-conainter}\n    image: ${imageName: imageName}\n    ports:    \n    - containerPort: ${containerPort: 80}\n"
    ,
    "description": "Create a Pod manifest"
  },
  "Secret": {
    "prefix": "Secret",
    "body": [
      "apiVersion: v1",
      "kind: Secret",
      "metadata:",
      "  name: ${name: secretName}",
      "data:",
      "  ${key: secretKey}: ${value: BASE64_ENCODED_VALUE}",
      "type: Opaque"
  ],
    "description": "Create a Secret manifest"
  },
  "Deployment": {
    "prefix": "Deployment",
    "body": [
      "apiVersion: apps/v1beta1",
      "kind: Deployment",
      "metadata:",
      "  name: ${1:myapp}",
      "spec:",
      "  replicas: ${2|1,2,3|}",
      "  template:",
      "    metadata:",
      "      labels:",
      "        app: ${1:myapp}",
      "    spec:",
      "      containers:",
      "      - name: ${1:myapp}",
      "        image: ${5:<Image>}",
      "        ports:",
      "        - containerPort: ${6:<Port>}"
  ],
    "description": "Create a Deployment manifest"
  },
  "ports":{
    "prefix": "ports",
    "description": "ports in services",
    "body": "ports:\n- name: ${name: Port Name}\n  port: ${port: Port}\n  targetPort: ${target: Target port}"
  },
  "Service": {
    "prefix": "service",
    "description": "template for a complete kubernetes service",
    "body": [     
    "kind: Service",
    "apiVersion: v1",
    "metadata:",
    "  name: ${1:myapp}",
    "spec:",
    "  selector:",
    "    app: ${1:myapp}",
    "  type: ${3|LoadBalancer,ClusterIP,NodePort|}",
    "  ports:",
    "  - port: ${4:<Port>}",
    "    targetPort: ${5:<Target Port>}"
    
    ]
  }

}
